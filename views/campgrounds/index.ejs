<% layout('layouts/main') -%>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="typography">Campgrounds</h1>
                <p class="typography">Browse campgrounds</p>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <% campgrounds.forEach((campground) => { %>
            <div class="col-md-4">
                <article class="text-center">
                    <picture>
                        <img src="<%= campground.cover %>" alt="<%= campground.title %>" />
                    </picture>
                    <h2 class="typography"><%= campground.title %></h2>
                    <p class="typography"><%= campground.description %></p>
                    <a class="btn btn-primary button button--default" href="/campgrounds/<%= campground._id %>">View <%= campground.title %></a>
                </article>
            </div>
            <% }); %>
        </div>
    </div>
</section>