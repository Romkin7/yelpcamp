<% layout('layouts/main') -%>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="typography">
                    <%= campground.title %>
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <caption>
                    <img src="<%= campground.cover %>" alt="<%= campground.title %> <%= campground.location %>" />
                    <p class="typography">Price/night <%= campground.price %>â‚¬</p>
                    <p class="typography">
                        <%= campground.location %>
                    </p>
                </caption>
                <a class="btn button button--default" href="/campgrounds">All campgrounds</a>
                <a class="btn button button--warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
                    <button class="btn button button--danger">Delete</button>
                </form>
            </div>
            <div class="col-md-6">
                <article class="typography">
                    <%= campground.description %>
                </article>
            </div>
        </div>
    </div>
</section>