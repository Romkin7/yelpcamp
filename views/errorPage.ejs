<% layout('layouts/main') -%>
<section>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading"><%=error?.message%></h4>
                    <% if (process.env.NODE_ENV !== "production") { %>
                    <p><%= error?.stack %></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>